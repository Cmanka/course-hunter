{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "module": "ESNext",
    "noImplicitAny": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types/", "./types/"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
